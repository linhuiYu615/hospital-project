<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.RecordMapper">

    <sql id="Base_Column_List">
        id,user_id,doctor_id,time,medical_record,inhospital,inhospital_record
    </sql>

    <select id="selectAll" resultType="com.example.pojo.entity.Record">
        select record.*,user.name as userName,doctor.name as doctorName
        from record
        left join user on record.user_id = user.id
        left join doctor on record.doctor_id = doctor.id
        <where>
            <if test="id != null"> and id= #{id}</if>
<!--            <if test="userId != null"> and recoed.user_id= #{userId}</if>-->
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="doctorId != null"> and doctor_id = #{doctorId}</if>
            <if test="inhospital != null"> and inhospital= #{inhospital}</if>
            <if test="userName != null"> and user.name= #{userName}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.pojo.entity.Record">
        select
        <include refid="Base_Column_List" />
        from record
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from record
        where  id = #{id}
    </delete>
<!--    user_id,doctor_id,time,medical_record,inhospital,inhospital_record-->
    <insert id="insert" parameterType="com.example.pojo.entity.Record" useGeneratedKeys="true">
        insert into record
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="userId != null">user_id,</if>
                <if test="doctorId != null">doctor_id,</if>
                <if test="time != null">time,</if>
                <if test="medicalRecord != null">medical_record,</if>
                <if test="inhospital != null">inhospital,</if>
                <if test="inhospitalRecord != null">inhospital_record,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="userId != null">#{userId},</if>
                <if test="doctorId != null">#{doctorId},</if>
                <if test="time != null">#{time},</if>
                <if test="medicalRecord != null">#{medicalRecord},</if>
                <if test="inhospital != null">#{inhospital},</if>
                <if test="inhospitalRecord != null">#{inhospitalRecord},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.pojo.entity.Record">
        update record
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="doctorId != null">
                doctor_id = #{doctorId},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="medicalRecord != null">
                medical_record = #{medicalRecord},
            </if>
            <if test="inhospital != null">
                inhospital = #{inhospital},
            </if>
            <if test="inhospitalRecord != null">
                inhospital_record = #{inhospitalRecord},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>